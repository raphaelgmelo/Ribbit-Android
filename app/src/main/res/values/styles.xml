<resources>


    <style name="Theme.Vitrine" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_vitrine</item>
        <item name="popupMenuStyle">@style/PopupMenu.Vitrine</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Vitrine</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Vitrine</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Vitrine</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Vitrine</item>
        <item name="actionModeBackground">@drawable/cab_background_top_vitrine</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_vitrine</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Vitrine</item>

        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.Vitrine.Overflow</item>

    </style>


    <style name="Theme.Vitrine.Overflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="ActionBar.Solid.Vitrine" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_vitrine</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_vitrine</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_vitrine</item>
        <item name="progressBarStyle">@style/ProgressBar.Vitrine</item>
        <item name="titleTextStyle">@style/ActionBar.Solid.Vitrine.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.Vitrine.TitleTextStyle"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ActionBar.Transparent.Vitrine" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_vitrine</item>
        <item name="progressBarStyle">@style/ProgressBar.Vitrine</item>
    </style>

    <style name="PopupMenu.Vitrine" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_vitrine</item>
    </style>

    <style name="DropDownListView.Vitrine" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_vitrine</item>
    </style>

    <style name="ActionBarTabStyle.Vitrine" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_vitrine</item>
    </style>

    <style name="DropDownNav.Vitrine" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_vitrine</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_vitrine</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_vitrine</item>
    </style>

    <style name="ProgressBar.Vitrine" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_vitrine</item>
    </style>

    <style name="ActionButton.CloseMode.Vitrine" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_vitrine</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Vitrine.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Vitrine</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Vitrine</item>
    </style>

    <style name="AuthBackground">
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="AuthBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:contentDescription">@string/content_desc_logo</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:src">@drawable/background</item>
    </style>

    <style name="AuthTitle">
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="AuthTitle.AuthSubtitle">
        <item name="android:text">@string/subtitle</item>
        <item name="android:layout_below">@+id/title</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="AuthFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/subtitle</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AuthEditText">
        <item name="android:ems">10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>



</resources>