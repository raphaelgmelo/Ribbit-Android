<resources>

    <style name="Theme.Vitrine" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_vitrine</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Vitrine</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Vitrine</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Vitrine</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Vitrine</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Vitrine</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_vitrine</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_vitrine</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Vitrine</item>

        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>

    </style>

    <style name="ActionBar.Solid.Vitrine" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_vitrine</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_vitrine</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_vitrine</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Vitrine</item>
    </style>

    <style name="ActionBar.Transparent.Vitrine" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_vitrine</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Vitrine</item>
    </style>

    <style name="PopupMenu.Vitrine" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_vitrine</item>
    </style>

    <style name="DropDownListView.Vitrine" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_vitrine</item>
    </style>

    <style name="ActionBarTabStyle.Vitrine" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_vitrine</item>
    </style>

    <style name="DropDownNav.Vitrine" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_vitrine</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_vitrine</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_vitrine</item>
    </style>

    <style name="ProgressBar.Vitrine" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_vitrine</item>
    </style>

    <style name="ActionButton.CloseMode.Vitrine" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_vitrine</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Vitrine.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Vitrine</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Vitrine</item>
    </style>




    <style name="AuthBackground">
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="AuthBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:contentDescription">@string/content_desc_logo</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:src">@drawable/background</item>
    </style>

    <style name="AuthTitle">
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="AuthTitle.AuthSubtitle">
        <item name="android:text">@string/subtitle</item>
        <item name="android:layout_below">@+id/title</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="AuthFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/subtitle</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AuthEditText">
        <item name="android:ems">10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
